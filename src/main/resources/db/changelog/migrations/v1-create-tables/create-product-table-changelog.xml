<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="5-create-product-sequence" author="everlast1ngw1nter">
        <createSequence sequenceName="product_seq" incrementBy="1"/>
    </changeSet>

    <changeSet id="5-create-product-table" author="everlast1ngw1nter">
        <createTable tableName="product">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="category" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="calories_number_hundred" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="customer_id" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="product"
                                 baseColumnNames="customer_id"
                                 referencedTableName="customer"
                                 referencedColumnNames="id"
                                 constraintName="fk_product_customer"/>
    </changeSet>

</databaseChangeLog>
